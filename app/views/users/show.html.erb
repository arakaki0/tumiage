<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ユーザー詳細
      </h1>
    </div>
  </div>
</section>





<section  class="section">

  <%= @user.username %>

  <% if current_user.id == @user.id %>
  <div class="edit">
    <%= link_to("編集", edit_user_path(@user), class: "button is-primary") %>
  </div>
  <% end %>

  ポイント：
  <% if @user.point == nil %>
  <%= "ポイントはなし" %>
  <% elsif @user.point != nil %>
  <%= @user.point %>
  <% end %>

  <div class="column">
    <div class="image is-96x96">
      <% if @user.image? %>
      <%= image_tag @user.image.url %>
      <% else %>
      <%= image_tag "/user_images/jisin_app_user.png" %>
      <% end %>
    </div>
  </div>


</section>

<section  class="section">

  <div class="column">
    <p>最近の投稿</p>
  </div>

  <div class="column">
    <% @user.posts.each do |post| %>
    <%= link_to(post.content, post_path(post)) %>
    <%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
    <% end %>
  </div>

</section>
