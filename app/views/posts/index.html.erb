<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        投稿一覧
      </h1>
    </div>
  </div>
</section>

<% @posts.each do |post| %>
<div class="colunms">
  <div class="column">
    <div class="card ">

      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-48x48">
              <%= image_tag post.user.image.url %>
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-4"><%= link_to(post.user.username, user_path(post.user.id)) %></p>
          </div>
        </div>

        <div class="content">
          <%= link_to(post.content, post_path(post) ) %>
          <br>
          <time datetime="2016-1-1"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></time>
          <br>
          <% if  current_user.already_liked?(post) %>
          既にスゴイね！済です
          <% else %>
          <%= link_to(post_likes_path(post),method: :post)do %>
          スゴイね！をする
          <% end %>
          <% end%>
        </div>
      </div>
    </div>
  </div>



</div>
<% end %>
